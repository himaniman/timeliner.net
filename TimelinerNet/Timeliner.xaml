<UserControl x:Class="TimelinerNet.Timeliner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimelinerNet"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             SizeChanged="UserControl_SizeChanged" Loaded="UserControl_Loaded">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Background="LightGray" BorderBrush="Black" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="text" Margin="2"/>
                </StackPanel>
            </Border>
            <Border Grid.Row="1" Background="White" BorderBrush="Black" BorderThickness="1">
                <StackPanel x:Name="stackPanel_Threads">
                    <Border BorderBrush="Black" BorderThickness="0,0,0,1">
                        <TextBlock Text="task1" Margin="2"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="0,0,0,1">
                        <TextBlock Text="task2" Margin="2"/>
                    </Border>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" Background="LightGray" BorderBrush="Black" BorderThickness="1">
                <Grid x:Name="grid_Timeline" ClipToBounds="True">
                    <Border Background="Green" BorderBrush="Red" BorderThickness="1" Width="350" Margin="-10,0,0,0" HorizontalAlignment="Left">
                        <StackPanel>
                            <TextBlock Text="text" Margin="2" HorizontalAlignment="Center"/>
                            <Grid ClipToBounds="True">
                                <TextBlock Text="1" Margin="-10,2,2,0" HorizontalAlignment="Left"/>
                                <TextBlock Text="2" Margin="30,2,2,0" HorizontalAlignment="Left" Width="50" TextAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
            <Border Grid.Row="1" Grid.Column="1" Background="LightGray" BorderBrush="Black" BorderThickness="1">
                <Grid>
                    <Grid x:Name="grid_MainGrid" ClipToBounds="True"/>
                    <StackPanel x:Name="stackPanel_MainData" ClipToBounds="True">
                        <Border BorderBrush="Black" BorderThickness="0,0,0,1">
                            <Grid>
                                <Border Width="80" Margin="80,0,0,0" CornerRadius="2" Background="Yellow" BorderBrush="Red" BorderThickness="1" HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <TextBlock Text="asd" Margin="1"/>
                                </Border>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </StackPanel>
</UserControl>
